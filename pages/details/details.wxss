/* pages/details/details.wxss */
@import "/public/style/css.wxss";
.img1{
    width: 750rpx;
    height: 750rpx;
}
.img2{
    width: 750rpx;
    height: 100rpx;
}
.box {
    position: relative;
}
.flag{
    position: absolute;
    right: 20rpx;
    bottom: 40rpx;
    color: yellow;
}
.icontag{
    display: flex;
    flex-direction:column;
    justify-content: center;
    align-items: center;
    
    padding-top: 26rpx;
    height: 20rpx;
    width: 80rpx;
    font-size: 10px;
    color: #999;
}
.iconcolor{
    color: #999;
    font-size: 10px;
}

.pricewrap{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.price,
.tubiao{
    display: flex;
    flex-direction: row;
}

.price{
    align-items: flex-end;
    color:#e93b3d;
    font-size: 12px;
    font-weight: 400;
    line-height: 1;
    padding:20rpx 0 20rpx 10rpx;
}
.pricenum {
    font-size: 18px;
}
.img3{
    width: 68rpx;
    height: 28rpx; 
}
.img4{
    width: 48rpx;
    height: 28rpx; 
}
.title{
    font-weight: 700;
    line-height: 24px;
    font-size: 16px;
}
.detailtitle{
    padding: 0 10rpx 0;
}
.comment{
    display: inline-block;
    color: #999;
    padding: 10rpx  0 0;
    line-height: 1.3;
    font-size: 12px;
    overflow: hidden;
}
.red{
    display: inline-block;
    line-height: 1.3;
    font-size: 12px;
    color: #e4393c;
}